pipeline{
	agent  any
	tools{
	  maven "maven 3.9.9"
	}
	stages{
	  stage('clonefromscm'){
	    steps{
	      sh "echo jenkins is clonefromscm"
	      git branch: 'jan31', url: 'https://github.com/leslyazubu/liontech-joinedproject.git'
	    }
	  }
	  
	  stage('maven build'){
        steps{
          sh "echo 'running junit test on the src'"
          sh "echo 'maven is packaging the src'"
          sh "mvn verify"
          sh "mvn test"
          sh "mvn validate"
          sh "mvn install"
          sh "mvn clean package"
        }
      }

	  stage(code quality analysis){
        steps{
          sh "echo 'sonarqube perform code quality analysis on src'"
          sh "mvn sonar:sonar"
        }
      }
	}
}	  